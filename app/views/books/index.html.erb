<p id="notice"><%= notice %></p>

  <h1 >Office Library</h1>

  <% if current_user %>
    <%= link_to 'Add New Book', new_book_path, class: "btn btn-success", style: "margin: 1rem;" %>
  <% end %>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Quantity</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <%= cache(book) do %>
        <%= render book %>
      <% end %>
    <% end %>
  </tbody>
</table>
