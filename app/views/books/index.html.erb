<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% unless current_user.nil? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
